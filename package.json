{
   "name": "kroilonv2",
   "version": "0.0.0",
   "private": true,
   "scripts": {
      "start": "yarn run serve",
      "build": "yarn run build-ts && yarn run tslint",
      "serve": "node dist/server.js",
      "watch-node": "nodemon dist/server.js",
      "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
      "test": "jest --forceExit --coverage --verbose",
      "build-ts": "tsc",
      "watch-ts": "tsc -w",
      "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
      "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
      "tslint": "tslint -c tslint.json -p tsconfig.json",
      "copy-static-assets": "ts-node copyStaticAssets.ts",
      "debug": "yarn run build && yarn run watch-debug",
      "serve-debug": "nodemon --inspect dist/server.js",
      "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
   },
   "dependencies": {
      "@types/body-parser": "^1.16.8",
      "@types/cookie-parser": "^1.4.1",
      "@types/debug": "0.0.30",
      "@types/errorhandler": "0.0.32",
      "@types/express": "^4.11.1",
      "@types/jest": "^22.2.0",
      "body-parser": "~1.18.2",
      "collection-json-base": "^1.0.0-beta.24",
      "concurrently": "^3.5.1",
      "debug": "~2.6.9",
      "dotenv": "^5.0.1",
      "express": "~4.15.5",
      "faker": "^4.1.0",
      "hbs": "~4.0.1",
      "inversify": "^4.13.0",
      "iridium": "^8.0.0-alpha.14",
      "mysql": "^2.14.1",
      "passport": "^0.4.0",
      "passport-local": "^1.0.0",
      "reflect-metadata": "^0.1.10",
      "serve-favicon": "~2.4.5",
      "tslint": "^5.9.1",
      "typeorm": "^0.2.0",
      "winston": "^2.4.1"
   },
   "devDependencies": {
      "@types/faker": "^4.1.2",
      "@types/mongoose": "^5.0.7",
      "@types/node": "^8.0.29",
      "babel-cli": "^6.26.0",
      "babel-preset-env": "^1.6.1",
      "errorhandler": "^1.5.0",
      "jasmine": "^3.1.0",
      "jest": "^22.4.2",
      "node-mongo-seeds": "^3.0.1",
      "superagent": "^3.8.2",
      "supertest": "^3.0.0",
      "ts-jest": "^22.4.1",
      "ts-node": "3.3.0",
      "typescript": "2.5.2"
   }
}
